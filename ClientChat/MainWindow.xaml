<Window x:Class="ClientChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientChat"
        mc:Ignorable="d"
        Title="Chat" Height="450" Width="800"
        ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary Source="./Resource/MainDictionary.xaml"/>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <RichTextBox x:Name="chatRtb" IsReadOnly="True" Style="{StaticResource RtbChat}"></RichTextBox>
            <DockPanel>
                <TextBox x:Name="nickNameTb" Style="{StaticResource NickNameTb}" Text="Ваш никнейм"></TextBox>
                <TextBox x:Name="msgTb" Style="{StaticResource MessageTb}">Сообщение</TextBox>
                <Button x:Name="sendMsgBtn" Style="{StaticResource SendBtn}" Click="SendMsgBtn_Click">
                    <Button.Background>
                        <ImageBrush Stretch="UniformToFill" ImageSource="./Content/Message.jpg"/>
                    </Button.Background>
                </Button>
            </DockPanel>
        </StackPanel>

    </Grid>
</Window>
