<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    >
    <Style  x:Key="RtbChat">
        <Setter Property="Control.Height" Value="335"/>
        <Setter Property="Block.LineHeight" Value="1.0"/>
        <Setter Property="Control.Foreground" Value="Red"/>
        <Setter Property="Control.FontSize" Value="20"></Setter>
    </Style>

    <Style  x:Key="SendBtn">
        <Setter Property="Control.Height" Value="80"/>
        <Setter Property="Control.Cursor" Value="Hand"/>
    </Style>

    <Style  x:Key="MessageTb">
        <Setter Property="Control.Height" Value="80"/>
        <Setter Property="Control.Width" Value="500"/>
        <Setter Property="Control.FontSize" Value="20"></Setter>
    </Style>

    <Style  x:Key="NickNameTb">
        <Setter Property="Control.FontSize" Value="30"></Setter>

        <Setter Property="Control.BorderBrush" Value="White"></Setter>
        <Setter Property="Control.Width" Value="200"/>
        <Setter Property="Control.VerticalAlignment" Value="Center"></Setter>
        <Setter Property="Control.HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="Control.HorizontalContentAlignment" Value="Center"></Setter>
    </Style>
</ResourceDictionary>